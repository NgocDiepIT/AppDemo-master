<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@drawable/custom_click"
    android:orientation="vertical">

    <ViewFlipper
        android:id="@+id/view_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_ava_one"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin10"
            android:src="@drawable/backgr"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_ava_more1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/margin15"
                android:src="@drawable/backgr"
                app:civ_border_color="@color/white"
                app:civ_border_width="1dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_ava_more2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/backgr"
                app:civ_border_color="@color/white"
                app:civ_border_width="1dp" />
        </RelativeLayout>
    </ViewFlipper>

    <TextView
        android:id="@+id/tv_namegroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="80dp"
        android:text="Group"
        android:textColor="@color/black"
        android:textSize="@dimen/font17"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/view_flipper"
        android:background="@color/greylite2"
        android:layout_marginTop="-2dp"
        android:layout_marginLeft="@dimen/margin5"
        android:layout_marginRight="@dimen/margin5"/>

</RelativeLayout>