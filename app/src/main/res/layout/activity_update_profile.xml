<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UpdateProfileActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/font23"
        android:text="Edit profile"
        android:layout_marginLeft="@dimen/margin15"
        android:layout_marginTop="@dimen/margin20"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin15"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/font17"
        android:text="FullName:"
        android:layout_marginLeft="@dimen/margin15"
        android:layout_marginTop="@dimen/margin15"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edt_fullName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin40"
        android:background="@drawable/custom_edittext_boder"
        android:layout_margin="@dimen/margin10"
        android:paddingStart="@dimen/margin15"
        android:paddingEnd="@dimen/margin15"
        android:textColor="@color/black"
        android:textSize="@dimen/margin15"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/font17"
        android:text="Address:"
        android:layout_marginLeft="@dimen/margin15"
        android:layout_marginTop="@dimen/margin15"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edt_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin40"
        android:background="@drawable/custom_edittext_boder"
        android:layout_margin="@dimen/margin10"
        android:paddingStart="@dimen/margin15"
        android:paddingEnd="@dimen/margin15"
        android:textColor="@color/black"
        android:textSize="@dimen/margin15"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/font17"
        android:text="Date of Birth:"
        android:layout_marginLeft="@dimen/margin15"
        android:layout_marginTop="@dimen/margin15"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edt_DoB"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin40"
        android:background="@drawable/custom_edittext_boder"
        android:layout_margin="@dimen/margin10"
        android:paddingStart="@dimen/margin15"
        android:paddingEnd="@dimen/margin15"
        android:textColor="@color/black"
        android:textSize="@dimen/margin15"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/font17"
        android:text="Phonenumber:"
        android:layout_marginLeft="@dimen/margin15"
        android:layout_marginTop="@dimen/margin15"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edt_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin40"
        android:background="@drawable/custom_edittext_boder"
        android:layout_margin="@dimen/margin10"
        android:paddingStart="@dimen/margin15"
        android:paddingEnd="@dimen/margin15"
        android:textColor="@color/black"
        android:textSize="@dimen/margin15"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin30">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_effect"
            android:text="Cancel"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btn_ok"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_effect"
            android:text="Ok"
            android:textColor="@color/white"
            />
    </LinearLayout>

</LinearLayout>